<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".itemEntry">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="618dp"
        android:layout_margin="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="26dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/itemcard2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/itemheading"
                android:gravity="center"
                android:text="Defence Research"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="26dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editEntryName"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:hint="Research name"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/editEntryCourse"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:hint="Total cost"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <Button
                android:id="@+id/btnEntrySave"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="48dp"
                android:layout_marginBottom="12dp"
                android:text="Save"
                android:textSize="22dp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>